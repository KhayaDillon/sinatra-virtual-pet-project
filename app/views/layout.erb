<!DOCTYPE html>
<html>
  <head>
    <title>Virtual Pets</title>
  </head>
  <body>
    <nav>
      <ul>
        <% if logged_in? %>
          <h3>Welcome, <%=current_user.username.capitalize %></h3>
          <li><a href="/"> Home </a></li>
          <li><a href="/users/<%= current_user.slug %>"> Profile </a></li>
          <li><a href="/logout"> Log Out </a></li>
        <% else %>
          <li><a href="/signup">Sign Up</a></li>
          <li><a href="/login">Login</a></li>
        <%end %>
      </ul>
    </nav>

    <section>
      <%= yield %>
    </section>

  </body>
</html>
